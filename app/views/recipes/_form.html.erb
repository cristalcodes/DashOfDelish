      <ul>
        <% @recipe.errors.full_messages.each do |message| %>
          <li><%= message %></li>
        <% end %>
      </ul>
    </div>
  <% end %>

<%= form_for @recipe do |f|%>

<div>
    <%= f.label :title %>
    <%= f.text_field :title %>
</div>

<div>
    <%= f.label :description %>
    <%= f.text_area :description %>
</div>

<p>Select a category that already exists: </p>
<div> 
    <%= f.collection_select :category_id, Category.all, :id, :name, include_blank: true %> 
</div>

<p> Or create a new category: </p>

<div>
    <%= f.fields_for :category, @recipe.build_category do |category_field|%>
    <%= category_field.text_field :name %>
    <% end %>
</div>

<div>
    <%= f.label :ingredients %>
    <%= f.text_area :ingredients %>
</div>

<div>
    <%= f.label :directions %>
    <%= f.text_area :directions %>
</div>
<br>

    <% if params[:action] == 'new' %>
        <%= f.submit "Create New Recipe"%>
    <% else %>
        <%= f.submit "Update Recipe"%>
    <% end %>

<% end %>


 
