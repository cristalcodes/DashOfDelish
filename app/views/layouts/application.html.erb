<!DOCTYPE html>
<html>
  <head>
    <title>DashOfDelish</title>
    <%= csrf_meta_tags %>
    <%= csp_meta_tag %>

    <%= stylesheet_link_tag 'application', media: 'all', 'data-turbolinks-track': 'reload' %>
    <%= javascript_pack_tag 'application', 'data-turbolinks-track': 'reload' %>
  </head>
<style>

    h2, h4 {
      text-align: center;
    }

    body {
      padding: 30px;
      font-family: Palatino;
    }

    .navigation a {
      color: teal;
    }


    
    </style>

  <body>

  <div class="container">

    <ul class="navigation">
      <%= render 'layouts/nav' %>
    <ul>

    <%flash.each do |name, msg| %> 
      <div class='alert alert-<%= name %>'>
      <%= msg %>
    </div>
    <% end %>
    
     <%= yield %>
  </div>


  </body>
</html>
