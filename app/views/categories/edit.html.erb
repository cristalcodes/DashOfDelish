<%= form_for @recipe do |f|%>

<% if @recipe.errors.any? %>
  <div id="error_explanation">
    <h2>
      <%= pluralize(@recipe.errors.count, "error") %>
      prohibited this post from being saved:
    </h2>
 
    <ul>
    <% @recipe.errors.full_messages.each do |msg| %>
      <li><%= msg %></li>
    <% end %>
    </ul>
  </div>
<% end %>


<div>
    <%= f.label :title %>
    <%= f.text_field :title %>
</div>

<div>
    <%= f.label :description %>
    <%= f.text_area :description %>
</div>

<p>Select a category that already exists: </p>
<div> 
    <%= f.collection_select :category_id, Category.all, :id, :name, include_blank: true %> 
</div>

<p> Or create a new category: </p>

<div>
    <%= f.fields_for :category, @recipe.build_category do |category_field|%>
    <%= category_field.text_field :name %>
    <% end %>
</div>

<div>
    <%= f.label :ingredients %>
    <%= f.text_area :ingredients %>
</div>

<div>
    <%= f.label :directions %>
    <%= f.text_area :directions %>
</div>
<br>